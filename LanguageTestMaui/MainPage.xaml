<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:res="clr-namespace:LanguageTestMaui.Resources.Strings"
             x:Class="LanguageTestMaui.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">

            <Button
                Clicked="Button_Clicked"
                Text="Click here for language change"
                ></Button>

            <Label Text="{x:Static res:strings.CurrentLanguageText}"></Label>

           

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
